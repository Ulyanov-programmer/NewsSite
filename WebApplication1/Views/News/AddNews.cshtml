@using NewsSite.UI.ViewModels
@model AddNewsVM
@{
    ViewData["Title"] = "Add the News Page";
}

<head>
    <link rel="stylesheet" href="../css/AddNewsStyles.css">
</head>
<div class="FormContainer">
    <form asp-action="AddNews" class="Form" enctype="multipart/form-data">
        <div class="Form_ButtonContainer">
            <span class="InputFile__PreText">Впишите название новости</span>
            <input asp-for="NameOfNews" class="InputText" type="text" required>
        </div>
        <div class="Form_ButtonContainer">
            <span class="InputFile__PreText">Ваше имя</span>
            <input asp-for="NameOfAuhtor" class="InputText" type="text" required>
        </div>
        <div class="Form_ButtonContainer">
            <input asp-for="DocFile"
                   class="InputFile"
                   id="DocFile"
                   type="file"
                   required accept=".doc,.docx">
            <label for="DocFile" class="InputFile_Lable">
                Выбрать файл для загрузки
            </label>
        </div>

        <button class="Form_ButtonContainer_ButtonContainer" type="submit"> Отправить новость </button>
    </form>
</div>